<h2>Update <%= @swimmer.swimmer_name %>'s Info:</h2>

<a href="/">Home</a>
<br />
<a href="/add_swimmers">Back</a>
<br />

<form action="/process_swimmer_update/<%= @swimmer.id %>" method="post">
  <p>
  Swimmer Name:
  <br /> 
  <input type="text" name="swimmer_name_update" 
    value="<%= @swimmer.swimmer_name %>" required>
  </p>

  <p>
  Date of Birth:
  <br />
  <input type="date" name="swimmer_dob_update" value="<%= @swimmer.swimmer_dob %>" required>
  </p>
<!--Boolean check against original setting-->
  <p>
  Gender:
  <br />
  <input type="radio" name="swimmer_gender_update" value="Male"> Male<br />
  <input type="radio" name="swimmer_gender_update" value="Female"> Female<br />
  <input type="radio" name="swimmer_gender_update" value="Other"> Other<br />
  </p>

  <p>
  Team:
  <br />
  <i>(currently on: <%= @swimmer.swimmer_team %>)</i>
  <br />
  <select name="swimmer_team_update">
    <% Team.all.each do |team| %>
      <option value="<%= team.id %>">
      <%= team.team_name %>
      </option>
    <% end %>
  </select>
  <br />
  </p>

  <p>
  Payment?:
  <br />
  <input type="radio" name="swimmer_payment_status_update" value="true" 
  checked> 
  Pay Now
  <br />
  <input type="radio" name="swimmer_payment_status_update" value="false"> 
  Pay Later
  <br />
  </p>  

  <p>
  <input type="submit" value="Update Swimmer">
  </p>
</form>