<form action="/runs_form" method="post">
  <p>
  Event:
  <br />
  <select name="run_event">
    <% Event.all.each do |event| %>
      <option value="<%= event.id %>">
      <%= event.event_name %>
      </option>
    <% end %>
  </select>
  <br />
  </p>

  <p>
  Swimmer:
  <br />
  <select name="run_swimmer">
    <% Swimmer.all.each do |swimmer| %>
      <option value="<%= swimmer.id %>">
      <%= swimmer.swimmer_name %>
      </option>
    <% end %>
  </select>
  <br />
  </p>

  <p>
  Run Time (in seconds):
  <br />
  <input type="number" step="any" name="run_time" required>
  </p>
  
  <p>
  <input type="submit" value="Add Run">
  </p>
</form>

<br />
<h3>Added Runs:</h3>
<table border="1">
  <thead>
    <tr>
      <th> Run Event </th>
      <th> Swimmer </th>
      <th> Run Time (sec.) </th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.run_event %></td>
        <td><center><%= run.run_swimmer %></center></td>
        <td><center><%= run.run_time %></center></td>
        <td><center><a href="/delete_run/<%= run.id %>">delete</a></center>
      </tr>
    <% end %>
  </tbody>
</table>